<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBase"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/takecontrol_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@color/colorPrimary"
                android:clickable="false"
                android:fontFamily="@font/ss_regular"
                android:text="START"
                android:textSize="40sp" />

            <Button
                android:id="@+id/stopcontrol_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@color/colorPrimary"
                android:clickable="false"
                android:fontFamily="@font/ss_regular"
                android:text="END"
                android:textSize="40sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/lower_fuel_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/ss_regular"
                    android:text="BLANK"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/add_fuel_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/ss_regular"
                    android:text="BLANK"
                    android:textSize="40sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="6dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/turning_lvl_0_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/ss_regular"
                    android:text="&lt;"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/turning_lvl_1_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/ss_regular"
                    android:text="&lt;"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/turning_lvl_2_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/ss_regular"
                    android:text="&lt;"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/turning_lvl_3_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/ss_regular"
                    android:text="&lt;"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/turning_lvl_4_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/ss_regular"
                    android:text="0"
                    android:textSize="40sp" />

                <Button
                    android:id="@+id/turning_lvl_5_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/ss_regular"
                    android:text="&gt;"
                    android:textSize="40sp" />
                <Button
                    android:id="@+id/turning_lvl_6_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/ss_regular"
                    android:text="&gt;"
                    android:textSize="40sp" />
                <Button
                    android:id="@+id/turning_lvl_7_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/ss_regular"
                    android:text="&gt;"
                    android:textSize="40sp" />
                <Button
                    android:id="@+id/turning_lvl_8_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="4dp"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/ss_regular"
                    android:text="&gt;"
                    android:textSize="40sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_margin="6dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:orientation="vertical">

            <Button
                android:id="@+id/power_lvl_4_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/ss_regular"
                android:text="3"
                android:textSize="40sp" />

            <Button
                android:id="@+id/power_lvl_3_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/ss_regular"
                android:text="2"
                android:textSize="40sp" />

            <Button
                android:id="@+id/power_lvl_2_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/ss_regular"
                android:text="1"
                android:textSize="40sp" />

            <Button
                android:id="@+id/power_lvl_1_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/ss_regular"
                android:text="0"
                android:textSize="40sp" />
            <Button
                android:id="@+id/power_lvl_0_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/ss_regular"
                android:text="-1"
                android:textSize="40sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical">

            <Button
                android:id="@+id/cam_config_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/ss_regular"
                android:text="Cam"
                android:textSize="40sp" />

            <Button
                android:id="@+id/rightBack_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:fontFamily="@font/ss_regular"
                android:text=""

                android:textSize="40sp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>